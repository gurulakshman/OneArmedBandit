<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="8dp"
              android:paddingTop="16dp"
              android:gravity="center_horizontal">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dip">
        <ImageView android:id="@+id/reel0"
                   android:paddingTop="1dip"
                   android:paddingBottom="1dip"
                   android:paddingLeft="1dip"
                   android:background="@android:color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/reel1"
                   android:padding="1dip"
                   android:background="@android:color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/reel2"
                   android:paddingTop="1dip"
                   android:paddingBottom="1dip"
                   android:paddingRight="1dip"
                   android:background="@android:color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1.0"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="16dip">
        <Button android:layout_width="wrap_content"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="@string/spinactivity_stop"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/button_stop0"/>
        <Button android:layout_width="wrap_content"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="@string/spinactivity_stop"
                android:textSize="12sp"
                android:id="@+id/button_stop1"/>
        <Button android:layout_width="wrap_content"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="@string/spinactivity_stop"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/button_stop2"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="1.0"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="16dip">
        <Button android:layout_width="wrap_content"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="@string/spinactivity_start"
                android:textSize="12sp"
                android:id="@+id/button_start"/>
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:layout_margin="10dp"
              android:id="@+id/textView"/>
</LinearLayout>

